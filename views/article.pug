article.news-module-article
    .news-module-article__content
        .news-module-article__image
            img(src=article.Imageurl, alt=article.Title)
        h2.news-module-article__title
            span.icon-cross
                img(src="images/icon.png", alt="cross")
            | #{article.Title}
        .news-module-article__text
            if article.Category == 'Exclusive'
                span.news-module-article__info #{article.Category}
            if article.Category == 'Rabbithos star'
                span.news-module-article__danger #{article.Category}
            | #{article.Intro}
        span.news-module-article__star
    footer.news-module-article__meta
        time.news-module-article__icon
            <svg width="32px" height="32px" viewBox="0 0 32 32" id="i-clock" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><circle cx="16" cy="16" r="14" /><path d="M16 8 L16 16 20 20" /></svg> #{article.Published}
        if article.Comments > 0
            .news-module-article__icon
                <svg width="28px" height="28px" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg"><path clip-rule="evenodd" d="M4 2C2.34315 2 1 3.35522 1 5.02697V19.1529C1 20.8246 2.34315 22.1798 4 22.1798H17.6492L22.0504 25.7324C22.8361 26.3666 24 25.8022 24 24.7869V22.1798C25.6569 22.1798 27 20.8246 27 19.1529V5.02697C27 3.35522 25.6569 2 24 2H4ZM3 5.02697C3 4.46972 3.44772 4.01798 4 4.01798H24C24.5523 4.01798 25 4.46972 25 5.02697V19.1529C25 19.7101 24.5523 20.1618 24 20.1618H22.6C22.2686 20.1618 22 20.4329 22 20.7672V22.689C22 22.8571 21.8052 22.9502 21.6744 22.8446L18.5151 20.2945C18.4087 20.2086 18.2766 20.1618 18.1403 20.1618H4C3.44771 20.1618 3 19.7101 3 19.1529V5.02697Z" fill="black" fill-rule="evenodd"/></svg>  #{article.Comments}
